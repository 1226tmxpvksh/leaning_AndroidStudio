    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <!--
            android:layout_span="7" 로 안해주면 size지정 했을 때 1열의 크기가 전부 커짐

            layout_weight="1"로 해준 이유는 아래의 버튼들을 전부 layout_weight="1" 로 지정해 주어서 layout_weight="1"을 안써주면 크기가 안맞음
            만약 안쓰고 span="7" 해버리면 원래의 버튼 크기에 맞게 textview의 크기가 설정됨
            -->
            <!--예약하기 TextView-->
            <TextView
                android:id="@+id/text_reservation"
                android:layout_span="7"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="예약하기">
            </TextView>
        </TableRow>

        <TableRow>
            <!--텍스트 뷰를 2개 (숫자 + 글자) 를 넣어주기 위해 리니어 레이아웃 사용-->
            <!--달력의 월을 출력하는 레이아웃-->
            <LinearLayout
                android:gravity="center"
                android:layout_span="7"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/clean_month"
                    android:textSize="30dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:textSize="30dp"
                    android:text="월"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

        </TableRow>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/last_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전달"></Button>
            <Button
                android:id="@+id/next_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="다음달"></Button>
        </RelativeLayout>
